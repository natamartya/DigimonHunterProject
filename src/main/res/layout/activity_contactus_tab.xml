<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="67dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/homeBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTxt"
        app:layout_constraintVertical_bias="0.976"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="#fffff"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/homeorgg" />

    <ImageButton
        android:id="@+id/logoutBtn"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toEndOf="@+id/welcomeTxt"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.225"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="#fffff"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/logoutt" />

    <ImageButton
        android:id="@+id/digimonBtn"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="#fffff"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/digimon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/homeBtn"
        app:layout_constraintTop_toBottomOf="@+id/bentw
        app:layout_constraintVertical_bias="0.927" />

    <ImageButton
        android:id="@+id/contactusBtn"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="#fffff"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/contactuss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/digimonBtn"
        app:layout_constraintTop_toBottomOf="@+id/logoutBtn"
        app:layout_constraintVertical_bias="0.982" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Digimon Hunter is a interactive game  that connect player with all players around the world to get battle, sale, and share their hobbies on Digimon Hunter Forum, on this App Players can collect their Digimon Fighter more than on the game site and more season sale promo."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="© Earlene Ardelia | 2201791944" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="© Farhan Deristianto Putra | 2201792096" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="© Felix | 2201737425" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" © Natashya Amartya | 2201733963" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOTLINE 1-500-606 (36992)"
        android:textAlignment="center" />

</LinearLayout>